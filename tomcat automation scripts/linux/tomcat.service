[Unit]
Description=Apache Tomcat 9 Servlet Web Application Container
After=syslog.target network.target

[Service]
User=root
Restart=on-failure
Type=forking

Environment=CATALINA_PID=/opt/apache-tomcat-9.0.86/temp/tomcat.pid
Environment=CATALINA_HOME=/opt//opt/apache-tomcat-9.0.86
Environment=CATALINA_BASE=/opt/apache-tomcat-9.0.86
ExecStart=/opt/apache-tomcat-9.0.86/bin/startup.sh
ExecStop=/opt/apache-tomcat-9.0.86/bin/shutdown.sh

[Install]
WantedBy=multi-user.target
